{% extends 'base.html.twig' %}

{% block title %}{{ 'app.student.list_title'|trans }}{% endblock %}

{% block content %}
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">{{ 'app.student.list_title'|trans }}</h1>
    </div>



    <table class="table">
        <thead>
            <tr>
                <th>{{ 'app.student.label.student_number'|trans }}</th>
                <th>{{ 'app.student.label.firstname'|trans }}</th>
                <th>{{ 'app.student.label.lastname'|trans }}</th>
                <th>{{ 'app.student.label.departement'|trans }}</th>
                <th>{{ 'app.actions.title'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.numEtud }}</td>
                <td>{{ student.firstname }}</td>
                <td>{{ student.lastname }}</td>
                <td>{{ student.departement}}</td>
                <td>
                    <a href="{{ path('app.student_show', {'id': student.id}) }}">{{ 'app.crud.show'|trans }}</a>
                    <a href="{{ path('app.student_edit', {'id': student.id}) }}">{{ 'app.crud.edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ 'app.no_result'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app.student_new') }}">{{ 'app.actions.add'|trans }}</a>
{% endblock %}
